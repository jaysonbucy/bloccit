<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<% if has_posts(@user) %>
  <%= render @user.posts %>
<% else %>
  <%= @user.name %> does not have any posts at this time.
<% end %>

<h2>Comments</h2>
<% if has_comments(@user) %>
  <%= render @user.comments %>
<% else %>
  <%= @user.name %> does not have any comments at this time.
<% end %>

<h2>Favorites</h2>
<% if has_favorites(@user) %>
  <% @user.favorites.each do |favorite| %>
    <div class="row">
      <div class="col-md-8">
        <div class="media">
          <h4>
            <%= favorite.post.title %>
          </h4>
          <% gravatar_url = favorites_gravatar(favorite.post_id) %>
          <% unless gravatar_url.nil? %>
            <div class="media-left">
              <%= image_tag gravatar_url, class: 'media-object' %>
            </div>
            <% end %>
            <div class="media-right">
              Favorited : <%= pluralize(favorite.post.votes.count, 'time') %>
              <br>
              Comments : <%= favorite.post.comments.count %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
<% end %>
